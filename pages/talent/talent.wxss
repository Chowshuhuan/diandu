/* pages/talent/talent.wxss */
.talent{
 padding: 25rpx 25rpx;
}
.search{
  margin-top: 20rpx;
  position: relative;
}
.searchTxt{
  display: block;
  width: 600rpx;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding-left: 70rpx ;
  color: #999999;
  font-size: 28rpx;
}
.searchImg{
  display: block;
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  left: 30rpx;
  top:50%;
  transform: translateY(-50%);
}
.info{
  height: 100rpx;
  /* background: #f5f5f5; */
  padding: 20rpx 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
  position: relative;
}
.check{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 40rpx;
}
.name{
  color: #333333;
  font-size: 30rpx;
  padding: 10rpx 0 10rpx 80rpx;
}
.worker{
  color: #999999;
  font-size: 26rpx;
  padding-left: 80rpx;
}