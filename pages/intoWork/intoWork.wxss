/* pages/employ/employ.wxss */
.top{
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 30rpx;
  position: relative;
}
.down{
  height: 17rpx;
  width: 25rpx;
  margin-left: 20rpx;
}
.searchIcon{
  width: 31rpx;
  height: 31rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.footer{
  height: 80rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  text-align: right;
}
.downLoad{
  color: #fff;
  background: #3FCB56;
  font-size: 32rpx;
  display: inline-block;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 40rpx;
  margin-right: 30rpx;
}
/* 表格样式 */
.table-module {
  display: flex;
  margin-top: 2vh;
  background: white;
  border-bottom: 1rpx solid #EEEEEE;
}
.scroll-box {
  height: auto;
  white-space: nowrap; /*它会防止元素中的文本换行，除非使用了一个br元素。*/
  display: flex;
  /* width: 100%; */
}
.limit-scroll{
  height: auto;
}
.top-scroll-box{
  /* width: 100vw; */
  height: auto;
  /* height: 16.9vh; */
}
.top-scroll-add{
  /* width: 100vw; */
 height: 16.9vh;
}
.scroll-view-item {
  /* width: 25vw; */
  display: inline-block;
}
.company-name {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  height: 8.2vh;
  font-weight: bolder;
   color: #333;
  border-right: 1rpx solid #e5e5e5;
  border-top: 1rpx solid #e5e5e5;
  background: #f5f5f5;
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.price-box {
  height: 8.2vh;
  /* width: 100%; */
  display: flex;
  justify-content: center;
  align-items: center;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.price {
  /* width: 100%; */
  height: 8.2vh;
  display: flex;
  align-items: center;
  justify-content: center;
  color:    #333;
  font-size: 28rpx;
  border-right: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  letter-spacing: 1rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
}