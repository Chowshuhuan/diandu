/* pages/collect/collect.wxss */
.collect{
  /* padding-top: 20rpx; */
  padding-bottom: 20rpx;
}
.content {
  padding-top: 10rpx;
  /* background: linear-gradient(142deg, #00BBFA 0%, #4262FF 100%); */
  height: 100%;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.list {
  width: 700rpx;
  height: 227rpx;
  background: #fff;
  margin: 20rpx auto;
  position: relative;
  border-radius: 10rpx;
  padding-bottom: 15rpx;
}

.left {
  padding: 30rpx 23rpx;
}

.right {
  position: absolute;
  top: 30rpx;
  right: 15%;
}

.position {
  font-weight: Bold;
  color: #333333;
  font-size: 36rpx;
}

.salary {
  font-weight: Bold;
  padding: 10rpx 0;
  font-size: 30rpx;
}
.welfare{
  padding: 10rpx 0;
  padding-top: 10rpx;
  color: #4262FF;
  font-size: 26rpx;
}
.locale{
  padding: 10rpx 0;
  color: #999999;
  font-size: 26rpx;
  font-weight: Medium;
}
.num{
  color: #FF0000;
  font-weight: bold;
  font-size: 32rpx;
}
.time{
  font-size: 26rpx;
  color: #999999;
  font-weight: Medium;
  margin-top: 70rpx;
  width: 90rpx;
}
.physical,
.work,
.staff{
  background: #E4E9FF;
  padding: 10rpx;
  margin-right: 10rpx;
}
.pack{
  background: #FFE9F1;
  padding: 10rpx;
}