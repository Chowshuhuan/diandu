.del {
  width: 40rpx;
  height: 36rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.xuxian {
  margin-top: 40rpx;
  height: 100rpx;
  border: 1rpx dashed #4262FF;
  color: #4262FF;
  font-weight: bold;
  font-size: 38rpx;
  line-height: 100rpx;
  text-align: center;
}

.footer {
  background: #fff;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  padding-bottom: 30rpx;
  box-sizing: border-box;
}

.save {
  color: #fff;
  background: linear-gradient(142deg, #00BBFA 0%, #4262FF 100%);
  border-radius: 5px;
  width: 80% !important;
}