.box {
  padding: 60rpx 40rpx;
  padding-bottom: 160rpx;
}

.list {
  margin-top: 20rpx;
  height: 200rpx;
  position: relative;
  background: pink;
}

.txt {
  font-size: 30rpx;
  color: #2A2E3F;
  font-weight: 600;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.logoImg {
  width: 170rpx;
  height: 116rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

