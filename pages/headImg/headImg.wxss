/* pages/headImg/headImg.wxss */
.top,
.bottom {
  height: 200rpx;
  padding: 30rpx 30rpx;
  position: relative;
}
.bottom{
  margin-top: 30rpx;
}
.rightImg {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.rightTxt {
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
  padding: 20rpx;
  padding-left: 70rpx;
}
.updateTxt{
  padding-top: 40rpx;
  color: #2A2E3F;
  font-size: 28rpx;
  font-weight: bold;
}
.right,
.error {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}

image {
  width: 120rpx;
  height: 120rpx;
}
.errorImg{
  padding-top: 30rpx;
  display: flex;
  justify-content: space-between;
}