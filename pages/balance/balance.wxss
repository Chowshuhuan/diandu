/* pages/balance/balance.wxss */
.balance {
  padding: 25rpx 25rpx;
}
.top {
  background: linear-gradient(-39deg, #60DA75 0%, #A1F7AF 100%);
  height: 280rpx;
  text-align: center;
  padding-top: 40rpx;
  border-radius: 15rpx;
  color: #fff;
}
.top1{
 font-size: 30rpx;
 font-family: PingFang SC ;
 font-weight: Regular;
}
.top2{
  font-family: PingFang SC Bold;
  font-size: 50rpx;
  padding-top: 10rpx;
}
.top3{
 font-size: 30rpx;
  padding-top: 20rpx;
}
.top4{
 font-size: 30rpx;
  padding-top: 20rpx;
}
.content {
  margin-top: 40rpx;
  background: #fff;
  height: 350rpx;
}
.checkIcon{
  width: 22rpx;
  height: 15rpx;
  margin-left: 20rpx;
}
.month{
  height: 220rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding:30rpx;
}
.month1{
  font-size: 100rpx;
}
.monthBot{
  position: relative;
}
.right{
  position: absolute;
  right: 0;
  top: 0;
}
.money{
  padding-left: 20rpx;
}
.income{
  padding-right: 20rpx;
}
.city1{
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
  height: 40rpx;
}
.cityImg{
  width: 22rpx;
  height: 15rpx;
}
.cityPlace{
  padding-left: 20rpx;
  font-weight: bold;
  font-size: 30rpx;
}
.cityMoney{
  position: absolute;
  right: 30rpx;
  top: 0;
  font-weight: bold;
  font-size: 30rpx;
}
.infoList{
  padding-top: 40rpx;
  position: relative;
}
.cityMoney2{
  position: absolute;
  right: 20rpx;
