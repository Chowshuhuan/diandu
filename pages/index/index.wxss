.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.container {
  padding: 0;
  font-family: PingFang SC;
  padding-top: 450rpx;
  background: #fff;
  overflow-x: hidden;
}

.angel {
  z-index: 999;
  height: 60rpx;
  width: 100%;
  background: #fff;
  position: fixed;
  top: 400rpx;
}

view {
  width: 100%;
}

.top {
  height: 500rpx;
  position: fixed;
  top: 0;
  z-index: 999;
}

.img {
  height: 370rpx;
  width: 100%;
  z-index: 999;
}

.swiper {
  width: 100%;
  height: 500rpx;
}

swiper {
  width: 100%;
  height: 400rpx;
}

.bannerImg {
  height: 500rpx;
  width: 100%;
}

.sousuo2 {
  position: fixed;
  top: 360rpx;
  width: 80%;
  left: 10%;
  z-index: 999;
  height: 80rpx;
  box-shadow: 2px 2px 14px 0px rgba(188, 201, 209, 0.37);
}

.search {
  width: 100%;
  height: 80rpx;
  background: #F9F9F9;
  text-align: center;
  z-index: 999;
  box-sizing: border-box;
  border-radius: 5px 5px 5px 5px;
}

.section {
  width: 160rpx;
  height: 80rpx;
  background: #fff;
  position: absolute;
  left: 0;
  top: 0;
  color: #333333;
  z-index: 999;
  border-radius: 5px 0px 0px 5px;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  font-family: PingFang-SC-Medium;
  color: #333333;
  text-align: left;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.place {
  height: 14rpx;
  width: 24rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 20rpx;
  z-index: 999;
}

input {
  border: 1rpx solid #F4F4F4;
  border-radius: 0 10rpx 10rpx 0;
  width: 60%;
  height: 80rpx;
  background: #F5F5F5;
  position: absolute;
  left: 49%;
  top: 0;
  transform: translateX(-50%);
  box-sizing: border-box;
}

.searchLogo {
  width: 98rpx;
  height: 76rpx;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 5;
  background: linear-gradient(142deg, #00BBFA 0%, #4262FF 100%);
  border-radius: 0px 5px 5px 0px;
  text-align: center;
  line-height: 76rpx;
}

.content {
  background: #FFF;
  height: 100%;
}

.list {
  width: 700rpx;
  height: 330rpx;
  background: #fff;
  margin: 0rpx auto;
  position: relative;
  border-radius: 10rpx;
  padding-bottom: 15rpx;
  border-top: 1rpx solid #F5F5F5;
}

.left {
  padding: 60rpx 0;
  padding-left: 250rpx;
  position: relative;
}

.right {
  position: absolute;
  /* position: relative; */
  top: 30rpx;
  right: -80%;
}
.renshu {
  color: #B8B8B8;
  position: relative;
  height: 40rpx;
}

.gongsi {
  position: absolute;
  top: 20rpx;
  width: 250rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.renshu1 {
  position: absolute;
  top: 20rpx;
  right: 55%;
}

.position {
  width: 260rpx !important;
  font-weight: Bold;
  color: #333333;
  font-size: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.salary {
  width: 270rpx !important;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: Bold;
  padding: 10rpx 0;
  font-size: 30rpx;
}

.welfare {
  padding: 10rpx 0;
  padding-top: 10rpx;
  color: #FF0000;
  font-size: 26rpx;
}

view .locale {
  width: 500rpx !important;
  padding: 20rpx 0;
  color: #2A2E3F;
  font-size: 26rpx;
  font-weight: Medium;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  bottom: 0;
  left: 20rpx;
}

.localeInfo {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.num {
  color: #FF0000;
  font-weight: bold;
  font-size: 30rpx;
  padding-top: 35rpx;
}

.time {
  font-size: 26rpx;
  color: #999999;
  font-weight: Medium;
  margin-top: 190rpx;
}

.physical,
.work,
.staff {
  background: #F3F3F3;
  padding: 10rpx;
  margin-right: 10rpx;
  color: #2A2E3F;
}

.pack {
  background: #F3F3F3;
  padding: 10rpx;
}

.listLeft {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.listImg {
  width: 200rpx;
  height: 200rpx;
}