page{
  background: #f5f5f5;
  padding-bottom: 450rpx;
  padding-top: 120rpx;
}
.top{
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 999;
}
.inpt{
  height: 120rpx;
  padding-left: 50rpx;
  background: #fff;
}
.input-placeholder {
  color:#B8B8B8;
  font-size:32rpx;
  font-weight: 500;
}
.list{
  margin-top: 30rpx;
  height: 210rpx;
  background: #fff;
  position: relative;
}
.addImg{
  width: 144rpx;
  height: 144rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 32rpx;
}
.newImg{
  width: 144rpx;
  height: 144rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 202rpx;
}
.detele{
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  top: 36rpx;
  left: 312rpx;
}
.footer {
  z-index: 999;
  background: #f5f5f5;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  padding-bottom: 30rpx;
  box-sizing: border-box;
}
.save {
  color: #fff;
  background: linear-gradient(142deg, #00BBFA 0%, #4262FF 100%);
  border-radius: 5px;
  width: 80% !important;
}

