.person {
  height: 100%;
  background: #F5F5F5;
}

.profile {
  border-bottom: 1rpx solid #f0f0f0;
  background: #fff;
}
.now{
  position: absolute;
  left: 20%;
  font-size: 36rpx;
  top: 50%;
  transform: translateY(-50%);
}
.logo {
  height: 150rpx;
  position: relative;
}

.logo image {
  width: 98rpx;
  height: 98rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 20rpx;
}

.info {
  position: absolute;
  top: 3%;
  left: 20%;
}

.name {
  font-size: 30rpx;
  font-weight: 700;
  padding-bottom: 15rpx;
}

.number {
  color: #999999;
  font-size: 26rpx;
}

.jiantou {
  position: absolute;
  right: 30rpx;
  top: 5%;
}

.arrowhead {
  display: inline-block;
  width: 14rpx;
  height: 25rpx;
}

/* 结算金额 */
.price {
  /* margin-top: 20rpx; */
  height: 230rpx;
  background: linear-gradient(-39deg, #60DA75 0%, #A1F7AF 100%);
  text-align: center;
  padding-top:50rpx;
  box-sizing: border-box;
  color: #fff;
}
.money{
  font-weight: Regular;
  font-size: 28rpx;
  padding-bottom: 15rpx;
}
.figure{
  font-size: 45rpx;
  font-weight: bold;
}
/* 工时相关 */
.information{
  /* margin-top: 20rpx; */
  background: #fff;
}
.box{
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.month{
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
}
.box image{
  display: inline-block;
  width: 14rpx;
  height: 24rpx;
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
}
.personNum{
  position: absolute;
  right: 40rpx;
  top:2 rpx;
  font-family: PingFang-SC-Medium;
  color: #999;
}
/* 待办事项 */
.needDealt{
  margin-top: 20rpx;
  height: 200rpx;
  background: #fff;
}
.doNum{
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  border-radius: 50%;
  text-align: center;
  position: absolute;
  background: #FF0000;
  color: #fff;
  right: 45rpx;
  top: 50%;
  transform: translateY(-50%);
}