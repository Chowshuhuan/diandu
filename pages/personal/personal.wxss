page {
  height: 100%;
  background: #F5F5F5;
}
.color{
  background: #4262FF;
  height: 200rpx;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.person {
  height: 100%;
  background: #F5F5F5;
  padding: 20rpx 20rpx;
}

.profile {
  position: relative;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0px 2px 20px 0px rgba(78, 78, 78, 0.18);
}

.infoTop {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  position: relative;
  box-shadow: 0px 2px 20px 0px rgba(78, 78, 78, 0.18);
}

.now {
  position: absolute;
  left: 20%;
  font-size: 36rpx;
  top: 50%;
  transform: translateY(-50%);
}

.logo {
  height: 150rpx;
  position: relative;
}

.logo image {
  width: 98rpx;
  height: 98rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 20rpx;
}

.info {
  position: absolute;
  top: 5%;
  left: 20%;
}

.name {
  font-size: 30rpx;
  font-weight: 700;
  padding-bottom: 15rpx;
}

.number {
  color: #333;
  font-size: 26rpx;
}

.jiantou1 {
  position: absolute;
  right: 100rpx;
  top: 50%;
  transform: translateY(-50%);
}

.jiantou {
  position: absolute;
  right: 50rpx;
  top: 15%;
}

.arrowhead {
  display: inline-block;
  width: 14rpx;
  height: 25rpx;
}

/* 结算金额 */
.price {
  border-top: 2rpx solid #f5f5f5;
  height: 230rpx;
  text-align: center;
  padding-top: 50rpx;
  box-sizing: border-box;
}

.money {
  font-weight: bold;
  font-size: 28rpx;
  padding-bottom: 15rpx;
  color: #B8B8B8;
}

.figure {
  font-size: 45rpx;
  font-weight: bold;
  color: #333;
}

/* 工时相关 */
.information {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  position: relative;
  box-shadow: 0px 2px 20px 0px rgba(78, 78, 78, 0.18);
}

.box {
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.month {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  padding-left: 80rpx;
}

.boxImg1 {
  display: inline-block;
  width: 14rpx;
  height: 24rpx;
  position: absolute;
  right: 35rpx;
  top: 50%;
  transform: translateY(-50%);
}

.boxImg2 {
  display: inline-block;
  width: 36rpx;
  height: 38rpx;
  position: absolute;
  left: 35rpx;
  top: 50%;
  transform: translateY(-50%);
}
.boxImg3 {
  display: inline-block;
  width: 30rpx;
  height: 35rpx;
  position: absolute;
  left: 35rpx;
  top: 50%;
  transform: translateY(-50%);
}
.personNum {
  position: absolute;
  right: 80rpx;
  top: 2 rpx;
  font-family: PingFang-SC-Medium;
  color: #999;
}

/* 待办事项 */
.needDealt {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  position: relative;
  box-shadow: 0px 2px 20px 0px rgba(78, 78, 78, 0.18);
}

.doNum {
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  border-radius: 50%;
  text-align: center;
  position: absolute;
  background: #FF0000;
  color: #fff;
  right: 80rpx;
  top: 50%;
  transform: translateY(-50%);
}
