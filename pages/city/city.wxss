/* pages/city/city.wxss */

.city{
  padding: 25rpx 25rpx;
 }
.search{
  margin-top: 20rpx;
  position: relative;
}
.searchTxt{
  display: block;
  width: 600rpx;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding-left: 70rpx ;
  color: #999999;
  font-size: 28rpx;
}
.searchImg{
  display: block;
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  left: 30rpx;
  top:50%;
  transform: translateY(-50%);
}
.city_box {
  width: 100%;
  padding-top: 40rpx;
  height: calc(100% - 500rpx);
  background: #fff;
  display: flex;
  position: fixed;
  z-index: 1;
}

.city_locate_text {
  color: #4262FF;
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.city_left {
  flex: 1;
  padding-left: 40rpx;
}

.city_right {
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.letter_item {
  width: 30rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  border-radius: 50%;
  display: block;
  font-size: 24rpx;
  color: #333333;
}

.letter_item.active {
  color: #fff;
  background: #4262FF;
}

.city_locate,
.national {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #D9D9D9;
  font-size: 28rpx;
  color: #333;
}

.city_locate_title {
  font-size: 24rpx;
  color: #999;
  margin-right: 30rpx;
}

.new_city {
  font-size: 28rpx;
}

.new_city_title {
  padding: 40rpx 0 0 0rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.new_city_box {
  display: flex;
  flex-wrap: wrap;
}

.new_city_text {
  width: 130rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border: 2rpx solid rgba(153, 153, 153, 1);
  border-radius: 10rpx;
  margin: 10rpx;
  margin-top: 20rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.new_city_text.active {
  background-color: #4262FF;
  color: #fff;
  border: 2rpx solid #4262FF;
}

.city_first_letter {
  padding-top: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #4262FF;
}

.city_name {
  display: block;
  padding: 40rpx 0;
  border-bottom: 1px solid #D9D9D9;
  font-size: 28rpx;
  color: #333;
}

.hotcity {
  position: relative;
  padding: 40rpx;
  z-index: 100;
}