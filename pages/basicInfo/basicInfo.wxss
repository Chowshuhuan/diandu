.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-content {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9500;
  width: 100%;
  height: 35%;
  overflow: hidden;
  background: #fff;
  border-radius: 2rpx;
  box-sizing: border-box;
}

