/* pages/workHour/workHour.wxss */
.workHour{
  padding-bottom: 80rpx;
}
.top{
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 30rpx;
  position: relative;
}
.down{
  height: 17rpx;
  width: 25rpx;
  margin-left: 20rpx;
}
.searchIcon{
  width: 31rpx;
  height: 31rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.table {
  border: 0px solid darkgray;
  font-size: 26rpx;
}

.tr {
  display: flex;
  justify-content: center;
  height: 3rem;
  line-height: 3rem;
  align-items: center;
  border: 1rpx solid #EEEEEE;
}

.td {
  width: 20%;
  height: 100%;
  justify-content: center;
  text-align: center;
  border: 1rpx solid #EEEEEE;
  overflow: hidden;
  text-overflow: ellipsis;
}
.td:nth-child(3){
  width: 53%;
}
.td:nth-child(4){
  width: 50%;
}
.bg-w {
  background: snow;
}

.bg-g {
  background: #E6F3F9;
}

.th {
  width: 40%;
  justify-content: center;
  background: #f5f5f5;
  color: #333;
  display: flex;
  height: 3rem;
  align-items: center;
  border: 1rpx solid #EEEEEE;
}
.th:nth-child(3){
  width: 100%;
}
.th:nth-child(4){
  width: 100%;
}
.footer{
  height: 80rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  text-align: right;
}
.downLoad{
  color: #fff;
  background: #3FCB56;
  font-size: 32rpx;
  display: inline-block;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 40rpx;
  margin-right: 30rpx;
}