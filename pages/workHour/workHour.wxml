<!--pages/workHour/workHour.wxml-->
<view class="workHour">
  <view class="top">
    <view class="left">
      <text>2020.11</text>
      <image src="../../images/index/footer/4.png" class="down"></image>
    </view>
    <image class="searchIcon" src="../../images/index/footer/5.png"></image>
  </view>
  <!-- 表格内容 -->
  <view class="table">
    <view class="tr bg-w">
      <view class="th">序号</view>
      <view class="th">姓名</view>
      <view class="th ">身份证号</view>
      <view class="th ">服务单位</view>
      <view class="th ">工时/h</view>
    </view>
    <block wx:for="{{listData}}" wx:key="{{code}}">
      <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
        <view class="td">{{item.code}}</view>
        <view class="td">{{item.name}}</view>
        <view class="td">{{item.card}}</view>
        <view class="td">{{item.unit}}</view>
        <view class="td">{{item.hour}}</view>
      </view>
      <view class="tr" wx:else>
        <view class="td">{{item.code}}</view>
        <view class="td">{{item.name}}</view>
        <view class="td">{{item.card}}</view>
        <view class="td">{{item.unit}}</view>
        <view class="td">{{item.hour}}</view>
      </view>
    </block>
  </view>
  <!-- 下载明细 -->
  <view class="footer">
    <text class="downLoad">下载明细</text>
  </view>
</view>