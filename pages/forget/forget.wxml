<view class="forget">
  <form bindsubmit="formSubmit">
    <!-- 手机号输入框 -->
    <view class="infoBox">
      <text class="baliu">+86</text>
      <image class="mobileIcon" src="../../images/icon/14.png"></image>
      <input class="num" bindinput="blurPhone" name="phone" value="{{mobile}}" placeholder="请输入手机号" type="number" />
    </view>
    <!-- 密码输入框 -->
    <view class="infoBox">
      <text class="code2">验证码</text>
      <image class="yanmaIcon" src="../../images/icon/16.png"></image>
      <input placeholder="请输入验证码" name="code"  value="{{code}}" class="code"></input>
      <button class="yanzhengma" bindtap="toGetCode" data-id="1" disabled="{{logindisabled}}">
        {{logincodename}}
      </button>
      <!-- <input class="code"  placeholder="请输入密码" name="code" />
      <button class="getCode">获取验证码</button> -->
    </view>
    <view class="infoBox">
      <text class="code2">输入密码</text>
      <image class="prdIcon" src="../../images/icon/8.png"></image>
      <input class="code"  value="{{pwd}}"  placeholder="输入(密码6-20位英文字母和数字)" password="{{true}}" bindblur="userPasswordInput" name="pwd" />
    </view>
    <view class="infoBox">
      <text class="code2">再次输入密码</text>
      <image class="prdIcon" src="../../images/icon/8.png"></image>
      <input class="code"   value="{{surePwd}}" placeholder="与设置密码一致" bindinput="userPasswordInput2" password="{{true}}" name="surePwd" />
    </view>
    <button form-type='submit' class="{{activeBtn?'activeBtn':'mt40'}}">完成</button>
  </form>
</view>