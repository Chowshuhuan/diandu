.mobile {
  font-family: PingFang SC;
}

.infoBox {
  border-bottom: 2rpx solid #F0F0F0;
  padding: 10rpx 10rpx;
  position: relative;
  height: 70rpx;
}

.num,
.code {
  padding-left: 220rpx;
  height: 100%;
}

.baliu,
.code2 {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  font-weight: Bold;
  font-size: 28rpx;
}

.yanzhengma {
  height: 60rpx;
  background: #3FCB56;
  color: #fff;
  font-size: 24rpx;
  font-weight: Medium;
  border-radius: 24rpx;
  margin: 0;
  width: 180rpx !important;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  z-index: 999;
}
.mt40 {
  display: block;
  margin-top: 100rpx;
  background: #3FCB56;
  color: #fff;
  font-family: PingFang SC;
  font-weight: Medium;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  width: 700rpx !important;
  border-radius: 40rpx;
}