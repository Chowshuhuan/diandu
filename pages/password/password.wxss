.mobile {
  font-family: PingFang SC;
}

.infoBox {
  border-bottom: 2rpx solid #F0F0F0;
  padding: 10rpx 10rpx;
  position: relative;
  height: 70rpx;
}

.num,
.code {
  padding-left: 175rpx;
  height: 100%;
}

.baliu,
.code2 {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  font-weight: Bold;
  font-size: 28rpx;
}

.yanzhengma {
  height: 60rpx;
  /* line-height: 60rpx;
  text-align: center; */
  background: #3FCB56;
  color: #fff;
  font-size: 24rpx;
  font-weight: Medium;
  border-radius: 24rpx;
  margin: 0;
  width: 180rpx !important;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  z-index: 999;
}

.mt40 {
  display: block;
  margin-top: 160rpx;
  background: #3FCB56;
  color: #fff;
  font-family: PingFang SC;
  font-weight: Medium;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  width: 700rpx !important;
  border-radius: 40rpx;
}
.tabMode {
  padding: 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
   font-weight: 600;
}

.tabMode navigator {
  color: #333333;
  letter-spacing: 0.81px;
}
.tips {
  font-size: 24rpx;
  color: #333333;
  text-align: left;
  font-family: PingFang SC;
  font-weight: Medium;
}
.tips text {
  color: #3FCB56;
}
