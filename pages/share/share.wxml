<view class="share"> 
   <image class="backImg" src="../../images/icon/5.png"></image>
   <view>
    <view class="codeContent" bindbuttontap="buttontap">
      <view class="txt">
       <text>填写个人资料</text>
     </view>
    <view class="codeImg">
      <image show-menu-by-longpress class="codeImage" src="{{imagePath}}"></image>
    </view>
    <view class="txt">
      <view>
        扫一扫上面的二维图案, 可填写资料
      </view>
    </view>
  </view>
  <view class="btn" bindtap="saveCode">
      保存到手机相册
    </view>
  <!-- 画布，用来画二维码，只用来站位，不用来显示-->
  <view class="canvas-box">
    <canvas hidden="{{canvasHidden}}" style="width: 686rpx;height: 686rpx;background:#f1f1f1;" canvas-id="mycanvas" />
  </view>
   </view>
</view>
